[
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-shift-q": "projects::OpenRecent"
    }
  },
  {
    "context": "Workspace || Editor",
    "bindings": {
      "ctrl-shift-e": "project_panel::ToggleFocus",
      "ctrl-shift-g": "git_panel::ToggleFocus",
      "ctrl-b": "workspace::ToggleRightDock",
      "alt-b": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "space v": "workspace::NewFileSplitVertical",
      "space x": "workspace::NewFileSplitHorizontal",
      "space h": "workspace::ActivatePaneLeft",
      "space l": "workspace::ActivatePaneRight",
      "space k": "workspace::ActivatePaneUp",
      "space j": "workspace::ActivatePaneDown",

      "space f": "file_finder::Toggle",
      "space i": "editor::Format",
      "space s": "buffer_search::Deploy",

      "space y": "editor::Copy",
      "space d": "editor::Cut",
      "space p": "editor::Paste"
    }
  },
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual)",
    "bindings": {
      "space /": "editor::ToggleComments"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-h": "pane::ActivatePreviousItem",
      "ctrl-l": "pane::ActivateNextItem",
      "ctrl-/": "pane::SplitRight",
      "ctrl-m": "workspace::ToggleZoom",
      "ctrl-Right": "workspace::ActivateNextPane",
      "ctrl-Left": "workspace::ActivatePreviousPane"
    }
  },
  {
    "context": "VimControl && !menu",
    "bindings": {
      "ctrl-d": ["workspace::SendKeystrokes", "ctrl-d z z"],
      "ctrl-u": ["workspace::SendKeystrokes", "ctrl-u z z"]
    }
  },
  {
    "context": "Editor && !menu && vim_mode == normal",
    "bindings": {
      "shift-h": "pane::ActivatePreviousItem",
      "shift-l": "pane::ActivateNextItem"
    }
  }
]
