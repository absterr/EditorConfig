// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "restore_on_startup": "last_workspace",
  "icon_theme": "Symbols Icon Theme",
  "tabs": { "file_icons": true },
  "base_keymap": "VSCode",
  "relative_line_numbers": "enabled",
  "gutter": {
    "line_numbers": true
  },
  "minimap": {
    "show": "never"
  },
  "toolbar": { "breadcrumbs": false, "quick_actions": false },
  "cursor_shape": "block",
  "cursor_blink": true,
  "file_types": {},
  "format_on_save": "on",
  "telemetry": {
    "diagnostics": true,
    "metrics": true
  },

  "project_panel": {
    "dock": "right",
    "default_width": 280
  },
  "terminal": {
    "shell": {
      "program": "C:\\Program Files\\Git\\bin\\bash.exe"
    }
  },
  "git": {
    "inline_blame": { "enabled": false }
  },
  "git_panel": {
    "dock": "right",
    "default_width": 280
  },

  "vim_mode": true,
  "vim": {
    "default_mode": "normal"
  },

  "ui_font_size": 14,
  "buffer_font_size": 12,
  "theme": "GitHub Dark Default",

  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "classFunctions": ["cva", "cx"],
        "experimental": {
          "classRegex": ["[cls|className]\\s\\:\\=\\s\"([^\"]*)"]
        }
      }
    }
  },

  "languages": {
    "JavaScript": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      },
      "format_on_save": "on"
    },
    "TypeScript": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      },
      "format_on_save": "on"
    },
    "TSX": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      },
      "format_on_save": "on"
    },
    "JSON": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      },
      "format_on_save": "on"
    }
  }
}
